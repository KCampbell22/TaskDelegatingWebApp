@model TaskDelegatingWebApp.ViewModels.WeekViewModel;
@{
    ViewData["Title"] = "Days";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Days
            </th>
            <th>
                Tasks
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Days) {
            Day dayItem = new Day();
            string selectedRow = "";
            @if(item.DayId == (int?)ViewData["DayId"])
            {
                selectedRow = "table-success";
            }

            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.DayName)
            </td>
                 <td>
                 
                    @foreach(TaskItem task in item.TaskItems)
                    {

                    @task.TaskName
                    }
               
                <td>
                <a asp-action="Edit" asp-route-id="@item.DayId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DayId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DayId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
